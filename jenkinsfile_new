pipeline{
    agent any

    stages{
        stage('scm'){
            steps{
                checkout scm
            }
        }
        stage('build'){
            steps{
                sh 'mvn clean install'
            }
        }
        stage('nexus'){
            steps{
                nexusArtifactUploader artifacts: [
                    [artifactId: 'onlinebookstore', 
                    classifier: '', 
                    file: '/var/lib/jenkins/workspace/webapplication/target/onlinebookstore-0.0.1-SNAPSHOT.war', 
                    type: 'war']
                    ], 
                    credentialsId: 'nexus', 
                    groupId: 'onlinebookstore', 
                    nexusUrl: '47.129.46.77:8081', 
                    nexusVersion: 'nexus3', 
                    protocol: 'http', 
                    repository: 'webapp', 
                    version: '0.0.1-SNAPSHOT'
            }
        }
        stage('deploy'){
            steps{
                deploy adapters: 
                [tomcat9(
                    credentialsId: 'tomcat', 
                    path: '', 
                    url: 'http://47.129.46.77:8082/')
                    ], 
                    contextPath: null, 
                    war: '**/*.war'
            }
        }
    }
}
